<Window x:Class="Up.Diagram"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Up"
        mc:Ignorable="d"
        Title="Графики" Height="450" Width="800" Icon="/logo.png">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="75"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid x:Name="GridForChart" Grid.Column="1" Background="LightGray"  />
        <Button Content="Столбчатая" Grid.Column="0" Name="BarsButton" Margin="10,29,10,0" VerticalAlignment="Top" Click="ChartsButton_Click" Height="25"/>
        <Button Content="Линейная" Grid.Column="0" Name="LineButton" Margin="10,65,10,0" VerticalAlignment="Top" Click="ChartsButton_Click" Height="25"/>
        <Button Content="Круговая" Grid.Column="0" Name="PieButton" Margin="10,100,10,0" VerticalAlignment="Top" Click="ChartsButton_Click" Height="25"/>
    </Grid>
</Window>
